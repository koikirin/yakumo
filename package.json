{
  "name": "@root/yakumo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "external/*",
    "fixtures/*",
    "fixtures/default/packages/*",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "yakumo": "yakumo --import tsx",
    "build": "yarn yakumo build",
    "bump": "yarn yakumo version",
    "dep": "yarn yakumo upgrade",
    "pub": "yarn yakumo publish",
    "lint": "eslint --cache",
    "test": "yarn yakumo test default/index -r esbuild-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@cordisjs/eslint-config": "^1.0.4",
    "@types/node": "^20.10.2",
    "c8": "^7.14.0",
    "shx": "^0.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "yakumo": "^1.0.0-beta.11",
    "yakumo-esbuild": "^1.0.0-beta.5",
    "yakumo-tsc": "^1.0.0-beta.3"
  }
}
